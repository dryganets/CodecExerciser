<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snap.codec.exerciser">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.snap.codec.exerciser.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.snap.codec.exerciser.ExoPlayerSimulatorActivity"
            android:label="@string/title_exoplayer_simulation_test"
            android:theme="@android:style/Theme.Holo" >
        </activity>

        <activity
            android:name="com.snap.codec.exerciser.ExoPlayerActivity"
            android:label="@string/title_exoplayer_test"
            android:theme="@android:style/Theme.Holo" >
        </activity>

        <activity
            android:name="com.snap.codec.exerciser.SurfaceShuffleActivity"
            android:label="@string/title_activity_play_movie_surface" >
        </activity>
    </application>

</manifest>
